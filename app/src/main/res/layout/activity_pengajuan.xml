<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_top"
    tools:context=".main.Pengajuan">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1250dp">

            <ImageView
                android:id="@+id/kembali"
                android:layout_width="42dp"
                android:layout_height="29dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/back"></ImageView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:layout_marginTop="-30dp"
                android:src="@drawable/page" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="225dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitoo"
                    android:text="Pengajuan Data"
                    android:textColor="#ffffff"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/nunitoo"
                    android:text="@string/menara"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardHeader1"
                android:layout_width="match_parent"
                android:layout_height="930dp"
                android:layout_marginTop="300dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:cardCornerRadius="20dp"
                app:cardElevation="7dp"
                app:cardMaxElevation="@dimen/cardview_default_elevation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="400dp">


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="*Isi Data Dengan Sesuai &amp; Benar"
                    android:textColor="@color/endcolor"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/nomor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito"
                            android:hint="@string/nosurat"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16dp"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunito"
                            android:hint="@string/provider"
                            android:textColor="@color/teksindex" />

                        <Spinner
                            android:id="@+id/provider"
                            android:gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu"/>

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/siteid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Site ID"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/sitename"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Site Name"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/tinggi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="@string/tinggimenara"
                            android:inputType="number"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="@string/alamatmenara"
                            android:inputType="textMultiLine"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunito"
                            android:hint="@string/karakter"
                            android:textColor="@color/teksindex" />

                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/batasutara"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Batas Utara"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/batasselatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Batas Selatan"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/batasbarat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Batas Barat"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/batastimur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="Batas Timur"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/dibangun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="@string/berdiri"
                            android:inputType="text"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <EditText
                            android:id="@+id/lamasewa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="@string/lama"
                            android:inputType="number"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <EditText
                            android:id="@+id/pemilik"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunitoo"
                            android:hint="@string/pemilik"
                            android:inputType="textPersonName"
                            android:textColor="@color/teksindex"
                            android:textColorHint="@color/teksmenu" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:fontFamily="@font/nunito"
                            android:hint="@string/titik"
                            android:textColor="@color/teksindex" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="fill_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="170dp"
                            android:layout_height="50dp">
                            <EditText
                                android:id="@+id/lat"
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/nunitoo"
                                android:hint="Latitude"
                                android:inputType="numberDecimal"
                                android:textColor="@color/teksindex"
                                android:textColorHint="@color/teksmenu" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="190dp"
                            android:layout_height="50dp">
                            <EditText
                                android:id="@+id/ling"
                                android:layout_width="190dp"
                                android:layout_height="wrap_content"
                                android:ems="10"
                                android:fontFamily="@font/nunitoo"
                                android:hint="Longitude"
                                android:inputType="numberDecimal"
                                android:textColor="@color/teksindex"
                                android:textColorHint="@color/teksmenu" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>


                    <EditText
                        android:visibility="gone"
                        android:id="@+id/latling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/nunitoo"
                        android:hint="Titik Kordinat"
                        android:inputType="text"
                        android:textColor="@color/teksindex"
                        android:textColorHint="@color/teksmenu" />

                    <CheckBox
                        android:id="@+id/cekbok"
                        android:textStyle="italic"
                        android:fontFamily="@font/roboto"
                        android:textColor="@color/teksmenu"
                        android:textSize="12dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/cekbok"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                    </CheckBox>

                    <Button
                        android:layout_marginTop="20dp"
                        android:id="@+id/btn_next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/btn_background"
                        android:fontFamily="@font/nunito"
                        android:text="@string/lanjut"
                        android:textColor="@color/colorWhite"
                        android:textSize="20dp" />


                    <TextView
                        android:id="@+id/regis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nunito"
                        android:text="*Lanjut &amp; Siapkan Berkas Pendukung"
                        android:textAlignment="center"
                        android:textSize="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>